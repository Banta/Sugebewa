<% content_for :title, t(:new_group) -%>

<h1><%= content_for :title %></h1>

<%= form_for(@group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, { :class => 'text_input' } %>
  </p>
  <p class="actions">
    <%= f.submit t(:create_group)%>&nbsp; &mdash; &nbsp;
    <%= link_to t(:back), :action => 'my_groups' %>
  </p>
<% end %>
